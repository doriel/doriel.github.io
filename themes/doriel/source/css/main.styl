// Reset all selectors
*
	margin 0
	padding 0
	/*box-sizing border-box*/

body
	height: 100%

.container
	width 100%
	height 100%
	position fixed

.left
	width 30%
	height 100%
	background-color #009688
	float left
	position relative

.right
	width 70%
	height 100%
	background-color #28235d
	background-image url("../img/home.jpg")
	background-size cover
	background-repeat no-repeat
	float right

/* Main Menu */
.menu-bar
	width 92px
	right 30px 
	top 20px
	position absolute
	z-index 998
	cursor pointer
	color #FFF

.menu-bar img
	float left

.menu-bar span
	display block
	float right
	margin 2px 0 0 10px
	font-size 14px

.menu 
	width 90%
	height 90%
	background-color #28235d
	z-index 999
	position absolute
	top 50%
	left 50%
	-webkit-transform translate(-50%, -50%)
	-moz-transform translate(-50%, -50%)
	-ms-transform translate(-50%, -50%)
	transform translate(-50%, -50%)
	visibility hidden
	opacity 0
	-webkit-transition all .5s
	-moz-transition all .5s
	-ms-transition all .5s
	transition all .5s
	border 1px solid #5046ba

.menu-top
	top 0
	padding 5%
	font-family "Helvetica-Light", "sans-serif"

.menu-top-left
	float left

.menu-top-right
	float right

.menu-top-right h4
	color #fff
	cursor pointer

.menu-links
	text-align center
	height 20%
	padding-top 15%

.menu-links ul
	list-style-type none

.menu-links ul li
	display inline
	margin-right 20px
	
.menu-links ul li:last-child
	margin-right 0
	
.menu-links ul li a
	font-size 1.5em
	color #fff
	font-family "Helvetica-Bold"
	text-decoration none
	position relative
	-webkit-transition color .5s
	-moz-transition color .5s
	-ms-transition color .5s
	transition color .5s
		
.menu-links ul li a:after
	position absolute
	content ""
	width 0%
	height 2px 
	background-color #FFF
	top 30px
	left 0
	-webkit-transition width .5s
	-moz-transition width .5s
	-ms-transition width .5s
	transition width .5s
	
.menu-links ul li a:hover::after
	width 100%

//.menu-links ul li a:hover
//	color #e85746
	
.menu-bottom 
	text-align center
	color #fff

.menu-top-left img
	width 100px

.menu-bottom img
	width 160px
	margin-bottom 10px
	
// If pag like contact, it changes the color to orange
.page-menu
	color #e85746

/* Menu Actions / States */
.apagar
	display none

.mostrar 
	opacity 1
	visibility visible

.menu-top-right img
	width 22px
	cursor pointer
	transition transform .3s
	
.menu-top-right img:hover
	transform rotate(60deg)

