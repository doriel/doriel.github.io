doctype html
html(lang=config.language)
  head
    meta(charset='UTF-8')
    title= config.title + " — Criamos soluções inovadoras para Angola"
    meta(property='og:locale', content='pt_PT')
    meta(property='og:title', content='Mais que web é estratégia')
    meta(property='og:site_name', content='Looplab')
    meta(property='og:url', content='http://www.looplab.co.ao')
    meta(property='og:description', content='Somos uma empresa jovem e com potêncial. Nós podemos lhe ajudar a dar vida a sua ideia ou negócio. Fizemos desenvolvimento web e aplicações móveis.')
    meta(property='og:image', content='img/loop.png')
    meta(property='og:image:type', content='image/png')
    meta(property='og:image:width', content='180')
    meta(property='og:image:height', content='180')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= page.title + " — LoopLab" 

    // STYLESHEETS
    if theme.stylesheets !== undefined && theme.stylesheets.length > 0
      //- stylesheets list from config.yml
      each url in theme.stylesheets
        link(rel='stylesheet', href=url)
    link(rel="icon", href=config.root + 'img/favicon.png')

  //  Body
  body.branco

    section.container.page

      // Left content
      // Page content
      .left
        article.page-content
          .logo
            img(src="/img/qg.jpg", alt="Doriel Fonseca")

          .page-title
            h1= page.title

          .page-description!=page.content

            
            p
              a(href='/') INICIO |
              
              a(href='/sobre') SOBRE

            p
              a(href='https://www.facebook.com/doriel3572')
                img#minha_imagem(src='/img/facebook_norm.png', onmouseover='facehover()', onmouseout='faceout()', target='_blank')

              a(href='https://www.instagram.com/doriel3572')
                img#minha_imagem_pri(src='/img/instagram_norm.png', onmouseover='instahover()', onmouseout='instaout()', target='_blank')

              a(href='https://www.twitter.com/doriel3572')
                img#minha_imagem_sec(src='/img/twitter_norm.png', onmouseover='twithover()', onmouseout='twitout()', target='_blank')

            a(href="/#contactar")
              button.btn 
                a(href='mailto:doriel3572@gmail.com') CONTACTAR
        
      // Right content  
      .right
        article.project
            .info
              a(href='#')
                h1 Olá 
              .post-resume 
                p Chamo-me Doriel e sou empreendedor e Desenvolvidor web e mobile, actualmente trabalho na 
                  a(href='https://www.bantumakers.com') Bantu Makers
                  e  e vivo em Luanda, Angola

    
    //  JAVASCRIPT
    if theme.scripts !== undefined && theme.scripts.length > 0
      //- scripts list from config.yml
      each url in theme.scripts
        script(src=url)
    // Content