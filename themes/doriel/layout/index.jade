    section.container.page

      // Left content
      // Page content
      .left
        article.page-content
          .logo
            img(src="/img/qg.jpg", alt="Doriel Fonseca")

          .page-title
            h1 Doriel Fonseca

          .page-description 
            p Always trying to build a 
              b better 
