doctype html
html(lang=config.language)
  head
    meta(charset='UTF-8')
    title= config.title + " — DFHF"
    meta(property='og:locale', content='pt_PT')
    meta(property='og:title', content='Crescer, crescer e crescer')
    meta(property='og:site_name', content='Dorel Fonseca')
    meta(property='og:url', content='http://doriel.github.io')
    meta(property='og:description', content='Sou um jovem angolano, desenvolvidor web e mobile.')
    meta(property='og:image', content='img/qg.jpg')
    meta(property='og:image:type', content='image/jpg')
    meta(property='og:image:width', content='180')
    meta(property='og:image:height', content='180')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= page.title + " — Doriel" 


    // STYLESHEETS
    if theme.stylesheets !== undefined && theme.stylesheets.length > 0
      //- stylesheets list from config.yml
      each url in theme.stylesheets
        link(rel='stylesheet', href=url)
        link(rel="icon", href=config.root + 'img/favicon.png')
